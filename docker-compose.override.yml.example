# Docker Compose override example for VHACK
# Copy this to docker-compose.override.yml to customize your setup

services:
  vhack:
    # Override environment variables
    environment:
      - OPENROUTER_API_KEY=${OPENROUTER_API_KEY}
      - OPENAI_API_KEY=${OPENAI_API_KEY}
      - ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
      - HUGGINGFACE_API_KEY=${HUGGINGFACE_API_KEY}
      
    # Override volumes if needed
    volumes:
      - ./config.yaml:/app/config.yaml:ro
      - ./templates:/app/templates:ro
      # - ./data:/app/data  # For any data persistence
      
    # Add resource limits
    # deploy:
    #   resources:
    #     limits:
    #       memory: 1G
    #       cpus: '1.0'
        
  vhack-web:
    # Override web interface settings
    environment:
      - OPENROUTER_API_KEY=${OPENROUTER_API_KEY}
      - OPENAI_API_KEY=${OPENAI_API_KEY}
      - ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY}
      - HUGGINGFACE_API_KEY=${HUGGINGFACE_API_KEY}
      
    # Change port mapping if needed
    # ports:
    #   - "8080:5000"  # Use port 8080 instead of 5000